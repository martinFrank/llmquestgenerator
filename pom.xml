        <relativePath/> <!-- lookup parent from repository -->
    </parent>
    <groupId>com.github.martinfrank.games</groupId>
    <artifactId>llmquestgenerator</artifactId>
    <version>0.0.1-SNAPSHOT</version>
    <name>llmquestgenerator</name>
